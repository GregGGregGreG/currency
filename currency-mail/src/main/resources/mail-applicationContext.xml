<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.baddev.currency.mail"/>

    <bean id="mailer" class="org.baddev.currency.mail.Mailer">
        <property name="pool" ref="mailerPool"/>
        <property name="sender" ref="mailSender"/>
        <property name="template" ref="templateMessage"/>
    </bean>

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${mail.host}" />
        <property name="port" value="${mail.port}" />
        <property name="username" value="${mail.username}" />
        <property name="password" value="${mail.password}" />
        <property name="javaMailProperties">
            <props>
                <prop key="mail.smtp.auth">${mail.auth}</prop>
                <prop key="mail.smtp.starttls.enable">${mail.tls.enable}</prop>
            </props>
        </property>
    </bean>

    <bean id="templateMessage" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="${mail.message.from}"/>
        <property name="replyTo" value="noreply"/>
    </bean>

    <bean id="mailerPool" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="${mail.pool.coreSize}"/>
        <property name="keepAliveSeconds" value="${mail.pool.keepAlive}"/>
        <property name="maxPoolSize" value="${mail.pool.maxSize}"/>
        <property name="allowCoreThreadTimeOut" value="${mail.pool.coreTimeout}"/>
    </bean>

</beans>